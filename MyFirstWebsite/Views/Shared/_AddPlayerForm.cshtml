
<form class="form-container" id="addPlayerForm">
    <h1>Add Player</h1>

    <div class="form-group">
        <label for="name"><b>Name</b></label>
        <input class="form-control"type="text" placeholder="Enter Player Name" name="name" id="addPlayerNameInput" required>
    </div>

    <div class="form-group">
        <label for="position"><b>Position</b></label>
        <select class="custom-select" id="addPlayerPosition">
            <option value="0">QB</option>
            <option value="1">RB</option>
            <option value="2">WR</option>
            <option value="3">TE</option>
            <option value="4">DST</option>
            <option value="5">K</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary" id="submitPlayerButton">Submit</button>
    <button type="button" class="btn btn-danger" id="closeFormButton">Close</button>
</form>
