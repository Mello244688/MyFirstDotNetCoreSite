@{ 
    ViewBag.Title = "Home";
}

<div id="carousel" class="carousel slide frame" data-bs-ride="carousel">
    <div class="carousel-inner" role="listbox">
        @foreach (string filename in Directory.EnumerateFiles("wwwroot/images/carousel/").Select(f => System.IO.Path.GetFileName(f)))
        {
            if (filename == Directory.EnumerateFiles("wwwroot/images/carousel/").Select(f => System.IO.Path.GetFileName(f)).First())
            {
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="~/images/carousel/@filename" alt=@filename title="@filename">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="~/images/carousel/@filename" alt=@filename title="@filename">
                </div>
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
