@{ 
    ViewBag.Title = "Home";
}

<div id="carousel" class="carousel slide frame" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        @foreach (string filename in Directory.EnumerateFiles("wwwroot/images/carousel/").Select(f => System.IO.Path.GetFileName(f)))
        {
            if (filename == Directory.EnumerateFiles("wwwroot/images/carousel/").Select(f => System.IO.Path.GetFileName(f)).First())
            {
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="~/images/carousel/@filename" alt=@filename title="@filename">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="~/images/carousel/@filename" alt=@filename title="@filename">
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
